<div class="info-box panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="col-xs-6">{{title}}</h3>
    <div class="col-xs-3 col-xs-offset-3">
      {{#if pathLeft}}
        <p class="pull-left">{{#link-to pathLeft}}<i class="icon fa fa-arrow-left"></i>{{/link-to}}</p>
      {{/if}}
      {{#if pathRight}}
        <p class="pull-right">{{#link-to pathRight}}<i class="icon fa fa-arrow-right"></i>{{/link-to}}</p>
      {{/if}}
    </div>
  </div>
  <div class="panel-body">
    {{yield}}
  </div>
  <div class="panel-footer clearfix">
    <button class="btn btn-default pull-right">Download as PDF&nbsp;<i class="fa fa-file-pdf-o"></i></button>
  </div>
</div>