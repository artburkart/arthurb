<div class="info-box panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="col-xs-6">{{title}}</h3>
    <div class="col-xs-4 col-xs-offset-2 col-sm-3 col-sm-offset-3">
      {{#if pathLeft}}
        <p class="pull-left">{{#link-to pathLeft}}<i class="icon fa fa-arrow-left"></i>{{/link-to}}</p>
      {{/if}}
      {{#if pathRight}}
        <p class="pull-right">{{#link-to pathRight}}<i class="icon fa fa-arrow-right"></i>{{/link-to}}</p>
      {{/if}}
    </div>
  </div>
  <div class="panel-body">
    {{yield}}
  </div>
  <div class="panel-footer clearfix">
    <a href="https://docs.google.com/document/d/1DRj72sfN6nJZxxLPJLWSelKxFm8CA3GDIrpfLc-KZ2s/edit?usp=sharing" class="btn btn-default pull-right">View on Google Drive&nbsp;<i class="fa fa-file-pdf-o"></i></a>
  </div>
</div>